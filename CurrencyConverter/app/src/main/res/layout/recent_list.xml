<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:visibility="gone"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/Txt_Last_From"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorAccent"
        android:text="From : "
        android:layout_weight="1"
        android:paddingLeft="28dp"
        android:textSize="18sp"
        android:gravity="left|center"/>
    <TextView
        android:id="@+id/Txt_Last_To"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorAccent"
        android:text="To : "
        android:layout_weight="1"
        android:paddingLeft="28dp"
        android:textSize="18sp"
        android:gravity="left|center"/>
</LinearLayout>
    <TextView
        android:id="@+id/Txt_Last_Debited"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorAccent"
        android:text="Debited  Currency :"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:gravity="left|center"/>
    <TextView
        android:id="@+id/Txt_Last_Converted"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorAccent"
        android:text="Credited  Currency :"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:gravity="left|center"/>
    <TextView
        android:id="@+id/Txt_Last_Commission"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorAccent"
        android:text="Commission fee :"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:gravity="left|center"/>
    <TextView
        android:id="@+id/Txt_Last_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="00-00-0000 00-00"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:gravity="right|center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent"/>
</LinearLayout>
